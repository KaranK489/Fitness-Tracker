<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:layout_editor_absoluteX="3dp"
    tools:layout_editor_absoluteY="9dp">


    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="Your Info"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/numberPickerHeight1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="19dp"
        android:text="Height:"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/numberPickerHeight1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/numberPickerHeight1" />

    <NumberPicker
        android:id="@+id/numberPickerHeight1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/numberPickerHeight2"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/numberPickerHeight2" />

    <NumberPicker
        android:id="@+id/numberPickerHeight2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textViewInfo" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="45dp"
        android:text="ft"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/numberPickerHeight1"
        app:layout_constraintEnd_toStartOf="@+id/numberPickerHeight2"
        app:layout_constraintStart_toEndOf="@+id/numberPickerHeight1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="253dp"
        android:layout_marginBottom="45dp"
        android:text="in"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/numberPickerHeight2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/numberPickerHeight2" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:text="Approximate Stride Length: "
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewStrideLength"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewStrideLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="35dp"
        android:text=""
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonEnterWeight"
        app:layout_constraintStart_toEndOf="@+id/textView10" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="34dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="320dp"
        android:text="Weight:"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextWeight"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Enter Weight"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonEnterWeight"
        app:layout_constraintEnd_toStartOf="@+id/editTextCalorieGoal"
        app:layout_constraintStart_toEndOf="@+id/textView2" />

    <Button
        android:id="@+id/buttonEnterWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="35dp"
        android:text="Enter"
        app:layout_constraintBottom_toTopOf="@+id/textViewBMI"
        app:layout_constraintStart_toEndOf="@+id/editTextWeight" />

    <TextView
        android:id="@+id/textViewBMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="33dp"
        android:text="BMI: N/A"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:text="Daily Step Goal:"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextStepGoal"
        app:layout_constraintEnd_toStartOf="@+id/editTextStepGoal" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="159dp"
        android:text="Daily Distance Goal:"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextDistanceGoal" />

    <EditText
        android:id="@+id/editTextStepGoal"
        android:layout_width="118dp"
        android:layout_height="45dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="184dp"
        android:ems="10"
        android:hint="Enter Goal"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/buttonEnterDistanceGoal"
        app:layout_constraintEnd_toEndOf="@+id/buttonEnterStepGoal"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textViewBMI" />

    <Button
        android:id="@+id/buttonEnterDistanceGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="3dp"
        android:text="Enter"
        app:layout_constraintStart_toEndOf="@+id/editTextCalorieGoal"
        app:layout_constraintTop_toTopOf="@+id/editTextDistanceGoal" />

    <EditText
        android:id="@+id/editTextCalorieGoal"
        android:layout_width="101dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="91dp"
        android:layout_marginBottom="91dp"
        android:ems="10"
        android:hint="Enter Goal"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/editTextDistanceGoal"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/editTextStepGoal" />

    <EditText
        android:id="@+id/editTextDistanceGoal"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="14dp"
        android:ems="10"
        android:hint="Enter Goal"
        android:inputType="numberDecimal"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView9"
        app:layout_constraintEnd_toStartOf="@+id/buttonEnterDistanceGoal"
        app:layout_constraintStart_toStartOf="@+id/editTextCalorieGoal" />

    <Button
        android:id="@+id/buttonEnterStepGoal"
        android:layout_width="91dp"
        android:layout_height="44dp"
        android:layout_marginStart="116dp"
        android:layout_marginEnd="116dp"
        android:text="Enter"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextStepGoal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView8" />

    <Button
        android:id="@+id/buttonEnterCalorieGoal"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="87dp"
        android:text="Enter"
        app:layout_constraintBottom_toBottomOf="@+id/buttonEnterDistanceGoal"
        app:layout_constraintEnd_toEndOf="@+id/buttonEnterDistanceGoal"
        app:layout_constraintStart_toEndOf="@+id/editTextCalorieGoal"
        app:layout_constraintTop_toTopOf="@+id/buttonEnterStepGoal" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:text="Daily Calorie Goal:"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextCalorieGoal"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>